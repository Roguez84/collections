<tbody class="editando">
       <%= form_for :doctor, url: doctors_update_path, method: :post do |f| %>
         <%= f.text_field :id, value: @doctor.id %>
         <%= f.text_field :RUT, value: @doctor.RUT %>
         <%= f.text_field :names, value: @doctor.names %>
         <%= f.text_field :surnames, value: @doctor.surnames %>
         <%= f.text_field :specialty, value: @doctor.specialty %>
         <%= f.text_field :email, value: @doctor.email %>
         <%= f.submit "Aplicar cambios" %>
       <% end %>
 </tbody>


