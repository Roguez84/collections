
<h2>Mis Datos</h2>
<table>
    <thead>
      <th>ID</th>
      <th>RUT</th>
      <th>Nombres Doctor</th>
      <th>Apellidos Doctor</th>
      <th>Especialidad</th>
      <th>email</th>
    </thead>

    <tbody id="solo-ver">
        <tr >
          <td><%= @doctor.id %></td>
          <td><%= @doctor.RUT %></td>
          <td><%= @doctor.names %></td>
          <td><%= @doctor.surnames %></td>
          <td><%= @doctor.specialty %></td>
          <td><%= @doctor.email %></td>
